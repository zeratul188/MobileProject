<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="맞힌 갯수 : "
                android:fontFamily="@font/the140"
                android:textSize="20sp"
                android:textColor="#222222"
                android:textAlignment="textEnd"/>
            <TextView
                android:id="@+id/txtOK"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/the140"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#1A721A"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="틀린 갯수 : "
                android:fontFamily="@font/the140"
                android:textSize="20sp"
                android:textColor="#222222"
                android:textAlignment="textEnd"/>
            <TextView
                android:id="@+id/txtWorse"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/the140"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#C51313"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맞힌 단어"
            android:fontFamily="@font/the140"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A721A"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:id="@+id/layoutOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="틀린 단어"
            android:fontFamily="@font/the140"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#C51313"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:id="@+id/layoutWorse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

    </LinearLayout>

</ScrollView>