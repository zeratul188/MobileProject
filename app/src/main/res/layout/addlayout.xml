<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="20dp"
    android:background="@drawable/customdialog">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TableRow
            android:layout_marginBottom="10dp">
            <EditText
                android:id="@+id/edtEnglish"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="영어 뜻"
                android:fontFamily="@font/the140"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/customedit"
                android:textSize="25sp"/>
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/edtKorean"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:hint="한글 뜻"
                android:fontFamily="@font/the140"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:background="@drawable/customedit"
                android:textSize="25sp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="등급 선택 : "
                android:textSize="20sp"
                android:textAlignment="textEnd"
                android:fontFamily="@font/the140"
                android:textColor="#222222"/>
            <RadioGroup
                android:id="@+id/rgGrade"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rdoGrade1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="초급"
                    android:textColor="#222222"
                    android:drawableLeft="@drawable/easy_list"
                    android:drawablePadding="10dp"
                    android:checked="true"
                    android:textStyle="bold"
                    android:fontFamily="@font/the110"
                    android:buttonTint="#9b3232"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/rdoGrade2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중급"
                    android:drawableLeft="@drawable/normal_list"
                    android:drawablePadding="10dp"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:fontFamily="@font/the110"
                    android:buttonTint="#9b3232"
                    android:textSize="20sp"/>
                <RadioButton
                    android:id="@+id/rdoGrade3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고급"
                    android:drawableLeft="@drawable/hard_list"
                    android:drawablePadding="10dp"
                    android:textStyle="bold"
                    android:textColor="#222222"
                    android:fontFamily="@font/the110"
                    android:buttonTint="#9b3232"
                    android:textSize="20sp"/>
            </RadioGroup>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="추가"
            android:fontFamily="@font/the140"
            android:background="@drawable/corebuttonstyle"
            android:textColor="#f0f0f0"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"/>
    </LinearLayout>

</LinearLayout>