<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <padding android:left="5dp" android:right="5dp" android:top="2dp" android:bottom="2dp"/>
            <corners android:radius="5dp"/>
            <stroke android:color="#9b3232"
                android:width="2dp"/>
        </shape>
    </item>

    <item android:state_focused="false">
        <shape>
            <padding android:left="5dp" android:right="5dp" android:top="2dp" android:bottom="2dp"/>
            <corners android:radius="5dp"/>
            <stroke android:color="#80222222"
                android:width="2dp"/>
        </shape>
    </item>

</selector>